<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/gato"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/jugador1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Jugador 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jugador1Marcador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/jugador1"
        app:layout_constraintTop_toBottomOf="@id/jugador1" />


    <TextView
        android:id="@+id/jugador2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:text="Jugador 2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jugador2Marcador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:text="0"
        android:textSize="25sp"
        app:layout_constraintRight_toRightOf="@id/jugador2"
        app:layout_constraintTop_toBottomOf="@id/jugador2" />
    //ganador

    <TextView
        android:id="@+id/estado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jugador1Marcador" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/estado" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="28dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/btn_0" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="24dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="204dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="204dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/btn_0" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="220dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estado" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="404dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estado" />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="388dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        app:layout_constraintTop_toTopOf="@+id/btn_0" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="388dp"
        android:background="@android:color/transparent"
        android:src="@mipmap/squere"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        app:layout_constraintTop_toTopOf="@+id/btn_1" />


    <Button
        android:id="@+id/reinicio"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF003B"
        android:text="Partida Nueva"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_6" />



</androidx.constraintlayout.widget.ConstraintLayout>